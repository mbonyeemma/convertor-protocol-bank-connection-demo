NODE_ENV=development
PORT=5001
BANK_CODE=DFC
BANK_NAME=DFC Bank

# MySQL (defaults to localhost with 'root' user)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=bankdemo

# Convertor Protocol API (for testing)
CONVERTOR_API_URL=http://localhost:4000

# Bank's Ed25519 private key (PEM format)
# Option 1: File path (local dev)
BANK_PRIVATE_KEY_PATH=./keys/bank_private.pem
# Option 2: Direct PEM content (Railway secrets - set BANK_PRIVATE_KEY instead)
# BANK_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...

# Convertor's operational public key (to verify incoming requests)
# Option 1: File path (local dev)
CONVERTOR_PUBLIC_KEY_PATH=./keys/convertor_public.pem
# Option 2: Direct PEM content (Railway secrets - set CONVERTOR_PUBLIC_KEY instead)
# CONVERTOR_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...
